<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_walisongo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sejarah"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assalaam.id.sejarahislamindonesia.walisongo">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <Button
           android:text=" Pengertian Wali Songo"
           style="@style/btnSejarah"
           android:drawableLeft="@mipmap/walisongo"
           android:textColor="#000000"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:id="@+id/pengertian"
           android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true" />

       <Button
        android:text="1. Sunan Gresik"
        style="@style/btnSejarah"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gresik"
        android:layout_below="@+id/proses"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="2. Sunan Ampel"
        style="@style/btnSejarah"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ampel"
        android:layout_below="@+id/teori"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="3. Sunan Bonang"
        style="@style/btnSejarah"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/bonang"
        android:layout_below="@+id/tahapan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="4. Sunan Drajat"
        style="@style/btnSejarah"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/drajat"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

       <Button
        android:text="5. Sunan Kalijaga"
        style="@style/btnSejarah"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/kalijaga"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="6. Sunan Kudus"
        style="@style/btnSejarah"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/kudus"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="7. Sunan Muria"
        style="@style/btnSejarah"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/muria"
        android:layout_below="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="8. Sunan Gunung Jati"
        style="@style/btnSejarah"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/gunungjati"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

       <Button
           android:text="9. Sunan Giri"
           style="@style/btnSejarah"
           android:textColor="#000000"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"

           android:id="@+id/giri"
           android:layout_below="@+id/button7"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true" />

   </LinearLayout>
</ScrollView>
