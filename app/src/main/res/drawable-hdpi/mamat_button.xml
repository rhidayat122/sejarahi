<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#eeefef" />
            <gradient  android:angle="-90"  android:startColor="#08f2db" android:endColor="#f8fafa"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#08f2f2" />
            <solid  android:color="#08f2e2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e75c32" />
            <gradient  android:angle="-90"  android:startColor="#f22f08" android:endColor="#08f2d7" />
        </shape>
    </item>
</selector>