<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#efefee" />
            <gradient  android:angle="-90"  android:startColor="#ede4bb" android:endColor="#ede4bb"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#08f2f2" />
            <solid  android:color="#08f2e2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e7324d" />
            <gradient  android:angle="-90"  android:startColor="#f1efee" android:endColor="#f2cf08" />
        </shape>
    </item>
</selector>